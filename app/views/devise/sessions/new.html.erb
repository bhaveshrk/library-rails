<div class="container py-0 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <h3 class="mb-3 fst-italic">Login Here</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-outline mb-4">
          <div class="col-8">
            <%= f.label :email ,"Email:", :class=> 'form-label fw-bold font-monospace' %><br  />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=> 'form-control form-control-lg' %>
          </div>
        </div>

        <div class="form-outline mb-4">
          <div class="col-8">
            <%= f.label :password ,"Password:", :class=> 'form-label fw-bold font-monospace' %><br  />
            <%= f.password_field :password, autocomplete: "current-password", :class=> 'form-control form-control-lg' %>
          </div>
        </div>

          <div class="row mb-4">
            <div class="col d-flex ">
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.check_box :remember_me, :class=> 'form-check-input'  %>
                  <%= f.label :remember_me, :class=> 'form-check-label' %>
                </div>
              <% end %>
              <div class="mx-auto" style="width: 270px;">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                <% end %>
              </div>
            </div>
          </div>
      

        <div class="actions">
          <%= f.submit "Log in" , class: "btn btn-outline-success btn-block mb-4"%> <br />
        </div>

        <div class="row">
          <div class="col-md-6">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-primary" %><br />
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

